			<!-- cglib -->
			<dependency>
				<groupId>cglib</groupId>
				<artifactId>cglib</artifactId>
				<version>${cglib.version}</version>
			</dependency>
			<dependency>
				<groupId>cglib</groupId>
				<artifactId>cglib-nodep</artifactId>
				<version>${cglib.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<profiles>
		<!-- 开发环境，默认激活 mvn package -P dev -->
		<profile>
			<id>dev</id>
			<properties>
				<profiles.active>dev</profiles.active>
				<logger.default.level>DEBUG</logger.default.level>
				<logger.root.level>ERROR</logger.root.level>
				<logger.baseFile>/ouer/logs</logger.baseFile>
			</properties>
		</profile>
		<!-- 生产环境 -->
		<profile>
			<id>online</id>
			<properties>
				<profiles.active>online</profiles.active>
				<logger.default.level>INFO</logger.default.level>
				<logger.root.level>ERROR</logger.root.level>
				<logger.baseFile>/ouer/logs</logger.baseFile>
			</properties>
		</profile>
		<!-- 测试环境 -->
		<profile>
			<id>test</id>
			<properties>
				<profiles.active>test</profiles.active>
				<logger.default.level>DEBUG</logger.default.level>
				<logger.root.level>ERROR</logger.root.level>
				<logger.baseFile>/ouer/logs</logger.baseFile>
			</properties>
		</profile>
		<!-- 预发环境 -->
		<profile>
			<id>pre</id>
			<properties>
				<profiles.active>pre</profiles.active>
				<logger.default.level>INFO</logger.default.level>
				<logger.root.level>ERROR</logger.root.level>
				<logger.baseFile>/ouer/logs</logger.baseFile>
			</properties>
		</profile>
	</profiles>

    <distributionManagement>
        <repository>
            <id>releases</id>
            <url>http://nexus.ixiaopu.com:8081/nexus/content/repositories/xiangqu-releases</url>
        </repository>
        <snapshotRepository>
            <id>snapshots</id>
            <url>http://nexus.ixiaopu.com:8081/nexus/content/repositories/xiangqu-snapshots</url>
        </snapshotRepository>
    </distributionManagement>
	
	<repositories>
		<repository>
			<id>xiangqu</id>
			<url>http://nexus.ixiaopu.com:8081/nexus/content/groups/public-xiangqu/</url>
		</repository>
	</repositories>
</project>
